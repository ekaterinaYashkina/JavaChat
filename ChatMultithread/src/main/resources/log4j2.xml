<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="logPath">ChatMultithread/logs</Property>
        <Property name="fileServer">server</Property>
        <Property name="fileClient">client</Property>
    </Properties>
    <Appenders>
        <RollingFile name="server" fileName="${logPath}/${fileServer}.log" filePattern="${logPath}/${fileServer}_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="[%highlight{%-5level}] %d{DEFAULT} %c{1}.%M() - %msg%n%throwable{short.lineNumber}" />
            <Policies>
                <!-- Causes a rollover if the log file is older than the current JVM's start time -->
                <OnStartupTriggeringPolicy />
                <!-- Causes a rollover once the date/time pattern no longer applies to the active file -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>

        <RollingFile name="client" fileName="${logPath}/${fileClient}.log" filePattern="${logPath}/${fileClient}_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="[%highlight{%-5level}] %d{DEFAULT} %c{1}.%M() - %msg%n%throwable{short.lineNumber}" />
            <Policies>
                <!-- Causes a rollover if the log file is older than the current JVM's start time -->
                <OnStartupTriggeringPolicy />
                <!-- Causes a rollover once the date/time pattern no longer applies to the active file -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name = "serverLog" level="DEBUG" additivity="false">
            <AppenderRef ref="server" />
        </Logger>

        <Logger name = "clientLog" level="DEBUG" additivity="false">
            <AppenderRef ref="client" />
        </Logger>
    </Loggers>
</Configuration>
